<div class="background">
  <div class="py-4 container text-center">
   <div class="logo_velo_yellow">
      <%= link_to root_path do %>
        <%= image_tag "veloo_yellow.png" %>
      <% end %>

   </div>
    <div class="title">
      <h1 class="my-3">Se connecter</h1>
    </div>
    <div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs text-start">
          <div class="email">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: " Adresse email" } %>
          </div>
          <div class="password">
            <%= f.input :password, label: "Mot de passe",
                        required: false,
                        input_html: { autocomplete: "Mot de passe" } %>
          </div>
            <%= f.input :remember_me, label: "Rester connectÃ©", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class:'btn btn-primary mt-4' %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
