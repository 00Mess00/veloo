<div class="background-img">
  <div class="container d-flex new-form">
    <div class="row">
      <div class="col-sm d-flex justify-content-center">
        <div class="rounded p-3">
          <h3 class="text-center">Profile utilisateur</h3>
          <%= simple_form_for @user, url: profiles_path do |f| %>
            <%= f.input :skills, label: "Niveau de pratique", collection: ["Débutant", "Intermédiaire", "Expert"] %>
            <%= f.input :bike_type, label: "Type de vélo", collection: ["Classique", "Tout chemin", "Cargo"] %>
            <%= f.input :average_speed, label: "Vitesse moyenne" %>
            <%= f.input :photo, as: :file, label: "Photo"%>
            <div class="d-flex text-center justify-content-around p-2">
              <%= f.submit "Enregistrer !",class: 'btn btn-primary' %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
