<div class="navigation">
    <div class="directions-arrival">
      <div class="d-flex justify-content-center w-100">
        <div class="flag">
          <%= image_tag 'arrival.png' %>
        </div>
        <div class="instructions">
          <h2>Vous êtes arrivé !</h2>
        </div>
      </div>
      <div class="line-direction"></div>
    </div>
