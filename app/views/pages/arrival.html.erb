      <div class="summary-cyclability">
        <div class="cyclability item">
          <%= image_tag 'cyclab_GOOD.svg', width: '20', height: '40', :class => ""  %>
          <%# <p><strong><%= @route.duration.fdiv(60).round %>
          <%# </strong></p> %>
        </div>
        <div class="distance item">
          <%= image_tag 'cyclab_MIDDLE.svg', width: '20', height: '40', :class => ""  %>
          <%# <p><strong><%= @route.distance.fdiv(1000).round(2) %>
          <%# </strong></p> %>
        </div>
        <div class="arrival item">
          <%= image_tag 'cyclab_BAD.svg', width: '20', height: '40', :class => ""  %>
          <%# <p><strong><%= (Time.now + @route.duration.fdiv(60).round.minutes).strftime("%Hh%M") %>
          <%# </strong></p> %>
        </div>
      </div>
    </div>
  </div>
